<openerp><data>

    <record id="view_oversight_probe_variant_http_code_form" model="ir.ui.view">
        <field name="model">oversight.probe.variant.http.code</field>
        <field name="mode">primary</field>
        <field name="priority" eval="7"/>
        <field name="inherit_id" ref="view_oversight_probe_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="button_execute_variant" string="Execute" type="object"
                        groups="oversight.group_oversight_manager"/>
                <button name="button_enable_variant" attrs="{'invisible': [('active', '=', True)]}" string="Enable" type="object"
                        groups="oversight.group_oversight_manager"/>
                <button name="button_disable_variant" attrs="{'invisible': [('active', '=', False)]}" string="Disable" type="object"
                        groups="oversight.group_oversight_manager"/>
            </xpath>
            <group name="group_variant_settings" position="inside">
                <field name="url"/>
                <field name="info_code_list"/>
                <field name="warning_code_list"/>
            </group>
        </field>
    </record>

    <record id="view_oversight_probe_variant_http_code_tree" model="ir.ui.view">
        <field name="model">oversight.probe.variant.http.code</field>
        <field name="mode">primary</field>
        <field name="priority" eval="7"/>
        <field name="inherit_id" ref="view_oversight_probe_template_tree"/>
        <field name="arch" type="xml">
            <field name="active" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>


    <record id="action_oversight_probe_variant_http_code" model="ir.actions.act_window">
        <field name="name">HTTP Code</field>
        <field name="res_model">oversight.probe.variant.http.code</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_oversight_probe_variant_http_code"
        parent="menu_oversight_setting_non_intrusive_variant"
        action="action_oversight_probe_variant_http_code"
        sequence="2"/>

</data></openerp>
