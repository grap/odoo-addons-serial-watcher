<openerp><data>

    <record id="view_oversight_probe_tree" model="ir.ui.view">
        <field name="model">oversight.probe</field>
        <field name="arch" type="xml">
            <tree colors="blue:(state == 'draft')">
                <field name="name"/>
                <field name="probe_type"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_oversight_probe_form" model="ir.ui.view">
        <field name="model">oversight.probe</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_execute" string="Execute" type="object" groups="oversight.group_oversight_manager"/>
                    <button name="button_confirm" states="draft" string="Confirm" type="object" groups="oversight.group_oversight_manager"/>
                    <button name="button_draft" states="confirm" string="Set to Draft" type="object" groups="oversight.group_oversight_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="probe_type"/>
                        </group>
                        <group string="Probe Settings">
                            <field name="target"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Cron Settings">
                        <group>
                            <field name="cron_id"/>
                            <field name="interval_number"/>
                            <field name="interval_type"/>

                        </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_oversight_probe" model="ir.actions.act_window">
        <field name="name">Probes</field>
        <field name="res_model">oversight.probe</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_oversight_probe"
        parent="menu_oversight_setting"
        action="action_oversight_probe" 
        sequence="1"/>

</data></openerp>
